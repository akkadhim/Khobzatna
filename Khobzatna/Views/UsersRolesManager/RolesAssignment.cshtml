@model Khobzatna.Models.ApplicationUser

@{
    ViewBag.Title = "RolesAssignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ادارة الصلاحيات</h2>
<div class="row">
    <div class="col-md-2">
        <h2>اضافة صلاحية</h2>
    </div>
    <br />
    <div class="col-md-2">
        @using (Html.BeginForm("RolesAssignment", "UsersRolesManager", FormMethod.Post, null))
        {
            <input type="hidden" value="@Model.Id" id="UserId" name="UserId" />
            <div class="input-group">
                @Html.DropDownList("AddedRole", ViewBag.AllRoles as SelectList, "اختر الصلاحية", new { @class = "form-control", data_live_search = "true" })
                <span class="input-group-btn">
                    <button class="btn btn-success" type="submit">اضافة</button>
                </span>
            </div>
        }
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ClientType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClientType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EmailConfirmed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LockoutEndDateUtc)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LockoutEndDateUtc)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LockoutEnabled)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LockoutEnabled)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AccessFailedCount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccessFailedCount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

        </dl>
    </div>
    <div class="col-md-6">
        @if (ViewBag.Roles != null)
        {
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th class="bg-primary">
                            الصلاحية الحالية
                        </th>
                    </tr>

                    @foreach (string item in ViewBag.Roles)
                    {
                        <tr>
                            <td>
                                @using (Html.BeginForm("DeleteRole", "UsersRolesManager", FormMethod.Post, null))
                                {
                                    <input type="hidden" value="@Model.Id" id="UserId" name="UserId" />
                                    <input type="hidden" value="@item" id="RoleName" name="RoleName" />
                                    <div class="col-md-10">
                                        @Html.DisplayFor(modelItem => item)
                                    </div>
                                    <button class="btn btn-danger" type="submit">حذف</button>

                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>
        }
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
